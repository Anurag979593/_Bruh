<%- include ../partials/header %> <%- include ../partials/categories-navbar %>

<div class="container-fluid">
  <!-- Flash messages -->
  <% if(successMsg || errorMsg) {%>
  <div class="row mt-3 mb-3">
    <div class="col-md-12 m-auto">
      <% if (successMsg) { %>
      <div id="success" class="alert alert-success">
        <%= successMsg %>
      </div>
      <% } else { %>
      <div id="success" class="alert alert-success d-none"></div>
      <% } %>
    </div>
    <div class="col-md-12 m-auto">
      <% if (errorMsg) { %>
      <div id="error" class="alert alert-danger">
        <%= errorMsg %>
      </div>
      <% } else { %>
      <div id="error" class="alert alert-danger d-none"></div>
      <% } %>
    </div>
  </div>
  <% } %>
  <!-- Breadcrumbs -->
  <div class="row mt-2">
    <div class="col-md-12 m-auto">
      <%if (breadcrumbs) { %>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <% breadcrumbs.forEach(crumb => { if(!crumb.name.startsWith("?")){%>
          <li class="breadcrumb-item" aria-current="page">
            <a href="<%=crumb.url%>"><%= crumb.name %></a>
          </li>
          <%}})%>
        </ol>
      </nav>
      <%} %>
    </div>
  </div>
  <!-- Page banner image -->

  <% if(pageName == 'Blogs') { %>
  <div class="container">
    <img
      class="d-block hero-image2"
      src="/images/blogs.jpg"
    />
    <div class="centered">
      <h1><%=pageName%></h1>
    </div>
  </div>
  <%}%>

  <hr class="gradient-style" />
  <!-- Blog Cards-->
<div class="container">
  <div class="row mb-5 text-center text-dark">
  		<% blog.forEach((blog) => { %>
		    <div class="col-lg-4 col-md-4 col-12">
		        <div class="card" >
		          <img src="<%= blog.imagePath %>" class="card-img-top" alt="...">
		          <div class="card-body">
		            <h5 class="card-title blog_title"><strong><i><%= blog.title %></i></strong></h5>
		            <p class="card-text"><%= blog.description %></p>
		          </div>
		        </div>
		    </div>
         <% }) %>
   </div>
</div>




  <%- include ../partials/pagination %>
</div>
<%- include ../partials/footer %>





